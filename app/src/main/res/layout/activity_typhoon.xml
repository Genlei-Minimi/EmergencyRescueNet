<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contentDescription="null"
    tools:context=".TyphoonActivity" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_vid3"
            android:layout_width="521dp"
            android:layout_height="60dp"
            android:text="CLICK HERE TO WATCH VIDEO ABOUT TYPHOON \nSAFETY PRECAUTIONS"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/tp1"
            android:layout_width="match_parent"
            android:layout_height="704dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_vid3"
            app:srcCompat="@drawable/tp1" />

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/tp2"
            android:layout_width="match_parent"
            android:layout_height="761dp"
            android:layout_marginTop="704dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tp1"
            app:srcCompat="@drawable/tp2" />

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/tp3"
            android:layout_width="match_parent"
            android:layout_height="761dp"
            android:layout_marginTop="764dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tp2"
            app:srcCompat="@drawable/tp3" />

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/tp4"
            android:layout_width="match_parent"
            android:layout_height="761dp"
            android:layout_marginTop="764dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tp3"
            app:srcCompat="@drawable/tp4" />

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/tp5"
            android:layout_width="match_parent"
            android:layout_height="761dp"
            android:layout_marginTop="764dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tp4"
            app:srcCompat="@drawable/tp5" />

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/tp6"
            android:layout_width="match_parent"
            android:layout_height="761dp"
            android:layout_marginTop="764dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tp5"
            app:srcCompat="@drawable/tp6" />

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/fp7"
            android:layout_width="match_parent"
            android:layout_height="761dp"
            android:layout_marginTop="764dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tp6"
            app:srcCompat="@drawable/tp7" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>